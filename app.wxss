@import "./styles/iconfont.wxss";

/* 在微信小程序中使不支持通配符的，解决方案是手写标签，变成所有标签名 */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 通过变量来实现 
1 less中存在变量这个知识
2原生中的CSS和WXSS也是支持变量
*/
page {
  --themeColor: #eb4450;
  /* 定义统一的字体大小 
  1px=2rpx*/
  font-size: 28rpx;
}
image{
  width:100%;
}